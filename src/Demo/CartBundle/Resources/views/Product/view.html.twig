{% extends 'DemoCartBundle:Default:base.html.twig' %}

{% block body %}

<div>
    <ul>
        <li>Name:    {{ item.name }}</li>
        <li>price:    {{ item.price }}</li>
        <li>description:    {{ item.description }}</li>
        <li>inStock:    {{ item.inStock }}</li>
    </ul>
    {{ form_start(addToCartForm) }}
        {{ form_errors(addToCartForm) }}
        {{ form_row(addToCartForm.product_id, {'attr': {'value': item.id}}) }}
    {{ form_end(addToCartForm) }}
</div>

{% endblock %}